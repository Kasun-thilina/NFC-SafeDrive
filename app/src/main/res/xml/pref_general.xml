<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General Settings">
        <EditTextPreference
            android:defaultValue="@string/default_dialNo"
            android:key='@string/key_dialNo'
            android:summary="@string/default_dialNo"
            android:title='@string/title_dialNo'
            />
        <EditTextPreference
            android:defaultValue="@string/default_sms"
            android:key='@string/key_smsMessage'
            android:summary='@string/default_sms'
            android:title="@string/title_name"
            />
        <Preference
            android:summary="0:00"
            android:key="key_driveTime"
            android:title="Driving Time(Minutes:Seconds)"
            />
        <SwitchPreference
            android:key="pref_nfc"
            android:title="Use NFC"
            android:defaultValue="false" />
        <SwitchPreference
            android:key="pref_speed"
            android:title="Show Driving Speed"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="About">
        <Preference
        android:summary="@string/summary_developer"
        android:title="Developed By" />
        <Preference
            android:summary="@string/summary_version"
            android:title="Version"
            />
    </PreferenceCategory>

</PreferenceScreen>
